{
  "name": "hapify-vm",
  "version": "0.1.1",
  "description": "Sandbox for JavaScript code",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node dist/index.js",
    "postinstall": "npm run build",
    "update": "npm-check -u",
    "watch": "rm -rf dist && tsc -w",
    "build": "rm -rf dist && tsc -p .",
    "test": "lab dist/tests",
    "lint": "prettier --write '**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:hapify/vm.git"
  },
  "keywords": [
    "hapify",
    "vm"
  ],
  "author": "Edouard Demotes-Mainard <edouard@tractr.net>",
  "license": "ISC",
  "homepage": "https://github.com/hapify/vm#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@hapi/code": "^8.0.1",
    "@hapi/lab": "^22.0.4",
    "husky": "^4.2.5",
    "npm-check": "^5.9.2",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1"
  },
  "dependencies": {
    "@types/node": "^14.0.1",
    "typescript": "^3.9.2",
    "vm2": "^3.9.2"
  },
  "engines": {
    "node": ">=13"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged --pattern \"**/*.ts\""
    }
  }
}
