{
  "name": "hapify-vm",
  "version": "0.1.1",
  "description": "Sandbox for JavaScript code",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node dist/src/index.js",
    "watch": "rm -rf dist && tsc -w",
    "build": "rm -rf dist && ./node_modules/.bin/tsc -p .",
    "test": "./node_modules/.bin/lab dist/tests",
    "lint": "./node_modules/.bin/prettier --write '**/*{.js,.ts}'"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/tractrs/hapify-vm.git"
  },
  "keywords": [
    "hapify",
    "vm"
  ],
  "author": "Edouard Demotes-Mainard <edouard@tractr.net>",
  "license": "ISC",
  "homepage": "https://bitbucket.org/tractrs/hapify-vm#readme",
  "devDependencies": {
    "@hapi/code": "^7.0.0",
    "@hapi/lab": "^21.0.0",
    "prettier": "^1.15.3",
    "husky": "^4.2.5",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4"
  },
  "dependencies": {
    "@types/node": "^12.12.7",
    "typescript": "^3.2.2",
    "vm2": "^3.8.4"
  },
  "engines": {
    "node": ">=9.2.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
